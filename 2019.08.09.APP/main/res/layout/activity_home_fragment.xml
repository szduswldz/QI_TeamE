<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="not connected"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_pm_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/gl_right1"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintBottom_toBottomOf="@id/gl_top2"/>

    <TextView
        android:id="@+id/tv_no2_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/gl_right2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintBottom_toBottomOf="@id/gl_top2"/>

    <TextView
        android:id="@+id/tv_o3_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/gl_top2"
        app:layout_constraintBottom_toBottomOf="@id/gl_top3"
        app:layout_constraintStart_toStartOf="@id/gl_right1"
        app:layout_constraintEnd_toEndOf="@id/gl_right"/>

    <TextView
        android:id="@+id/tv_co_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/gl_top2"
        app:layout_constraintBottom_toBottomOf="@id/gl_top3"
        app:layout_constraintStart_toStartOf="@id/gl_right2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_so2_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/gl_right1"
        app:layout_constraintEnd_toEndOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/gl_top3"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_temp_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/gl_right2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top3"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintBottom_toBottomOf="@id/gl_top2"
        app:layout_constraintStart_toStartOf="@id/gl_mid"/>

    <TextView
        android:id="@+id/tv_no2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NO2"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintBottom_toBottomOf="@id/gl_top2"/>

    <TextView
        android:id="@+id/tv_o3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="O3"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/gl_top2"
        app:layout_constraintBottom_toBottomOf="@id/gl_top3"
        app:layout_constraintStart_toStartOf="@id/gl_mid"/>

    <TextView
        android:id="@+id/tv_co"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CO"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/gl_top2"
        app:layout_constraintBottom_toBottomOf="@id/gl_top3"
        app:layout_constraintStart_toStartOf="@id/gl_right"/>

    <TextView
        android:id="@+id/tv_so2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SO2"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/gl_top3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_mid"/>

    <TextView
        android:id="@+id/tv_temp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TEMP"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/gl_top3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/gl_right"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/gl_top2"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/gl_top3"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintStart_toStartOf="@id/gl_mid"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="@id/gl_top1"/>

    <TextView
        android:id="@+id/tv_heart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10"
        android:textStyle="bold"
        android:textSize="65sp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintBottom_toTopOf="@id/lv_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_mid"/>

    <ImageView
        android:id="@+id/lv_heart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/heart_icon"
        android:text="10"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:textSize="65sp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_mid"
        app:layout_constraintTop_toTopOf="@id/gl_top6"
        app:layout_constraintBottom_toBottomOf="@id/gl_top0"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#9ED6C0"
        android:text="Weather"
        android:textSize="25dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="@id/gl_top1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_mid"
        app:layout_constraintBottom_toBottomOf="@id/gl_top5"
        />

    <fragment
        android:id="@+id/fragmentMap"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/gl_top0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gl_top1"/>


</androidx.constraintlayout.widget.ConstraintLayout>